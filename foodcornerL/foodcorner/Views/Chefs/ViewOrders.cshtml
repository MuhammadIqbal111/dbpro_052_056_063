@model IEnumerable<foodcorner.Models.PassOrder>

@{
    ViewBag.Title = "ViewOrders";
}

<h2>ViewOrders</h2>

<p style="margin-top:50px;font-family:Arial;font-size:15px; margin-bottom:50px; padding-left:30px;text-align:left"> <h5>@ViewBag.msg</h5></p>

<table class="table table-bordered table-condensed">
    <tr>
        <th style="font-family:Arial;font-size:24px">
            @Html.DisplayNameFor(model => model.Chef.Id)
        </th>
        <th style="font-family:Arial;font-size:24px">
            @Html.DisplayNameFor(model => model.ItemsDetail.Name)
        </th>
        <th style="font-family:Arial;font-size:24px">
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.Chef.Id)
            </td>
            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.ItemsDetail.Name)
            </td>

            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>

                @Html.ActionLink("Done", "Done", new { id = item.OrderId },new { idd = item.ChefId})
            </td>
        </tr>
    }

</table>
