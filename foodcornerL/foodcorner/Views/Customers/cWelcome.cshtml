@model foodcorner.Models.Customer

@{
    ViewBag.Title = "cWelcome";
}

<html>
<head>
    <meta charset="utf-8">
    <title>Customer Welcome </title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/Content/csslr/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/Content/csslr/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/Content/imageslr/cwel.jpg" alt="form">
            </div>
            <form class="form-detail" action="#" method="post">
                

                    <br />
                    <div class="form-row">
                        <p>Proving you the best food in the town we are here to serve the best</p>
                        </br>
                        <p>@Html.ActionLink("Place Order", "PlaceOrder", new { id = Model.CustomerId })</p>
                    </div>


                    <div class="form-row-last">
                        <input type="submit" name="Add " class="register" value="Add">
                    </div>
                }

            </form>
        </div>
    </div>
</body>
</html>

