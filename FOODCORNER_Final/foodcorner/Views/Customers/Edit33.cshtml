@model foodcorner.Models.PlaceOrder

@{
    ViewBag.Title = "Edit33";
}
<h2 style="margin-top:50px;font-family:'Times New Roman', Times, serif;font-size:40px; margin-bottom:50px;padding-top:100px; text-align:center;color:cornflowerblue"><b>Give Feedback </b></h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PlaceOrder</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group" style="font-family:Arial;font-size:24px; padding-left:50px">
            @Html.LabelFor(model => model.Feedback, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="font-family:Arial;font-size:24px; padding-left:50px">
                @Html.EditorFor(model => model.Feedback, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.PlaceId)
        @Html.HiddenFor(model => model.OrderId)
        @Html.HiddenFor(model => model.ItemId)
        @Html.HiddenFor(model => model.Bill)
        @Html.HiddenFor(model => model.quantity)


        <div class="form-group" style="font-family:Arial;font-size:24px; padding-left:50px">
            <div class="col-md-offset-2 col-md-10" style="font-family:Arial;font-size:24px; padding-left:50px">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


