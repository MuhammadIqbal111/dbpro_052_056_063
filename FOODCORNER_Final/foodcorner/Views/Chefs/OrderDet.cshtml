@model IEnumerable<foodcorner.Models.PlaceOrder>

@{
    ViewBag.Title = "OrderDetail";
}


<h2>Order Detail</h2>

<h1 style="margin-top:50px;font-family:Arial;font-size:35px; margin-bottom:50px;padding-top:45px; text-align:center;color:cornflowerblue"><b>ORDER DETAIL</b></h1>

<table class="table table-bordered table-condensed">
    <tr>
        <th style="font-family:Arial;font-size:24px">
            @Html.DisplayNameFor(model => model.ItemsDetail.Name)
        </th>
        <th style="font-family:Arial;font-size:24px">
            @Html.DisplayNameFor(model => model.quantity)

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.ItemsDetail.Name)
            </td>
            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.quantity)
            </td>

        </tr>
    }

</table>


