@model IEnumerable<foodcorner.Models.PassOrder>

@{
    ViewBag.Title = "ViewOrders";
}

<h2>ViewOrders</h2>
<h1 style="margin-top:50px;font-family:Arial;font-size:35px; margin-bottom:50px;padding-top:45px; text-align:center;color:cornflowerblue"><b>ORDERS</b></h1>


<table class="table table-bordered table-condensed">
    <tr>
        <th style="font-family:Arial;font-size:24px">Chef Name</th>
        <th style="font-family:Arial;font-size:24px">Customer Name</th>
        <th style="font-family:Arial;font-size:24px">Status</th>
        <th style="font-family:Arial;font-size:24px">MANAGE</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.Chef.Name)
            </td>
            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.OrderDetail.Customer.Name)
            </td>
            <td style="font-family:Arial;font-size:24px">
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td style="font-family:Arial;font-size:24px">
                @Html.ActionLink("Order Detail", "OrderDet", new { id = item.OrderId })
                @Html.ActionLink("Done", "Done", new { id = item.OrderId, idd = item.ChefId })
            </td>
        </tr>
    }

</table>
