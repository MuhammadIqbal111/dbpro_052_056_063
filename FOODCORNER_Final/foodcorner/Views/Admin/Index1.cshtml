@model IEnumerable<foodcorner.Models.Chef>

@{
    ViewBag.Title = "Index1";
}

<h2>Index1</h2>


<h1 style="margin-top:50px;font-family:Arial;font-size:35px; margin-bottom:50px;padding-top:45px; text-align:center;color:cornflowerblue"><b></b></h1>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td style="color:black">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>

                @Html.ActionLink("Assign", "Assign", new { id = item.ChefId });
            </td>
        </tr>
    }

</table>
