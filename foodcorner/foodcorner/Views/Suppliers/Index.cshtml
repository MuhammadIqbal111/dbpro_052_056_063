@model IEnumerable<foodcorner.Models.Supplier>

@{
    ViewBag.Title = "View suppliers";
}

<h2>Index</h2>

<p style="margin-top:50px;font-family:Arial;font-size:15px; margin-bottom:25px;padding-top:70px;padding-left:30px; text-align:left"><b> Suppliers</b></p>
<table class="table table-bordered table-condensed">
    <tr>

        <td style="font-family:Arial;font-size:24px">Supplier Name</td>
        <td style="font-family:Arial;font-size:24px">Manage</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("View Categories", "ViewCategory", new { id = item.SupplierId })
                @Html.ActionLink("Delete", "Delete", new { id = item.SupplierId })
            </td>
        </tr>
    }

</table>
